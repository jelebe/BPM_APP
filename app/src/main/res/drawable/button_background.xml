<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape>
            <!-- Fondo del botón en estado presionado -->
            <gradient
                android:startColor="#ff6675"
                android:endColor="#ff6675" />
            <corners android:radius="8dp" />
            <!-- Borde en negro suave (20% opacidad) -->
            <stroke android:width="1dp" android:color="#33000000" />
        </shape>
    </item>
    <!-- Estado normal -->
    <item>
        <shape>
            <!-- Fondo del botón en estado normal -->
            <gradient
                android:startColor="#ff99a3"
                android:endColor="#ff99a3" />
            <corners android:radius="8dp" />
            <!-- Agregamos un borde con negro suave -->
            <stroke android:width="1dp" android:color="#33000000" />
        </shape>
    </item>
</selector>

