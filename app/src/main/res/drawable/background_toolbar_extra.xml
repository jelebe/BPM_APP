<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape>
            <!-- Fondo del botón en estado presionado -->
            <gradient
                android:startColor="#EBE9E9"
                android:endColor="#EBE9E9" />
            <corners android:radius="8dp" />

        </shape>
    </item>
    <!-- Estado normal -->
    <item>
        <shape>
            <!-- Fondo del botón en estado normal -->
            <gradient
                android:startColor="#EBE9E9"
                android:endColor="#EBE9E9" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>

