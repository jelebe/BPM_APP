<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Imagen de fondo. Asegúrate de tener "fondo_login.jpg" en res/drawable -->
    <item>
        <bitmap
            android:src="@drawable/fondo_login"
            android:gravity="center" />
    </item>
    <!-- Overlay con gradiente translúcido (equivalente a rgba(255,235,238,0.8)) -->
    <item>
        <shape>
            <gradient
                android:startColor="#CCFFEBEE"
                android:endColor="#CCFFEBEE"
                android:angle="90" />
        </shape>
    </item>
</layer-list>
