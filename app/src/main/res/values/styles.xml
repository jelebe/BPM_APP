<resources>
    <!-- Tema principal de la aplicación -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/toolbar_background</item> <!-- Color principal -->
        <item name="colorPrimaryDark">@color/purple_700</item> <!-- Color oscuro (barra de estado) -->
        <item name="colorAccent">@color/teal_200</item> <!-- Color de acento -->
        <item name="popupMenuStyle">@style/PopupMenuStyle</item> <!-- Estilo personalizado para el menú -->
    </style>

    <!-- Estilo personalizado para el menú desplegable -->
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/toolbar_background</item> <!-- Usa el mismo color que el Toolbar -->
        <item name="android:textColor">@color/toolbar_text_color</item> <!-- Color del texto -->
        <item name="android:itemBackground">@drawable/menu_item_background</item> <!-- Fondo de cada ítem -->
    </style>

    <!-- Otros estilos existentes -->
    <style name="PolaroidDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/background_soft</item> <!-- Fondo suave -->
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="ButtonPinkLight">
        <item name="android:backgroundTint">@color/pink_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonRedPale">
        <item name="android:backgroundTint">@color/red_pale</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Nuevo tema sin ActionBar -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Opcional: Puedes personalizar otros atributos aquí -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>