<resources>
    <!-- Tema principal de la aplicación -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/toolbar_background</item>
        <item name="colorPrimaryDark">@color/toolbar_background</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="popupMenuStyle">@style/PopupMenuStyle</item>

        <!-- Configuración de barra de estado -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Tema sin ActionBar -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Configuración de barra de estado -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Estilo personalizado para el menú desplegable -->
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/toolbar_background</item>
        <item name="android:textColor">@color/toolbar_text_color</item>
        <item name="android:itemBackground">@drawable/menu_item_background</item>
    </style>

    <!-- Otros estilos existentes -->
    <style name="PolaroidDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/background_soft</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="ButtonPinkLight">
        <item name="android:backgroundTint">@color/pink_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonRedPale">
        <item name="android:backgroundTint">@color/red_pale</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>